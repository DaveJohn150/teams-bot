{
    "contentType": "application/vnd.microsoft.card.adaptive",
      "content": {
            "type": "AdaptiveCard",
            "body": [
                {
                    "type": "TextBlock",
                    "size": "ExtraLarge",
                    "weight": "Bolder",
                    "text": "${word}",
                    "style": "heading"
                },
                {
                    "type": "TextBlock",
                    "text": "${definition}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "${example}",
                    "wrap": true,
                    "weight": "Lighter"
                },
                {
                    "type": "TextBlock",
                    "text": "by ${author} ${date}",
                    "wrap": true,
                    "weight": "Bolder"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://cdn-icons-png.flaticon.com/512/25/25423.png",
                                    "size": "Small",
                                    "width": "16px"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${likes}",
                                    "wrap": true,
                                    "size": "Small",
                                    "weight": "Bolder"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://cdn-icons-png.flaticon.com/512/25/25395.png",
                                    "width": "16px"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${dislikes}",
                                    "wrap": true,
                                    "size": "Small",
                                    "weight": "Bolder"
                                }
                            ]
                        }
                    ]
                }
            ],
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "View original",
                    "url": "${viewUrl}"
                }
            ],
            "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
            "version": "1.5"
}
}

