{
    "type": "AdaptiveCard",
    "body": [
      {
        "type": "TextBlock",
        "size": "Medium",
        "weight": "Bolder",
        "text": "${Title}"
      },
      {
        "type": "TextBlock",
        "text": "${suggestion}",
        "wrap": true
      }
    ],
    "actions": [
      {
        "type": "Action.ShowCard",
        "title": "Delete suggestion",
        "card":{
            "body": [
            {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "Confirm?"
            }
            ],
        "actions": [
            {
                "type": "Action.Execute",
                "title": "Confirm",
                "verb": "deleteSuggestion",
                "data": {"id": "${teamid}",
                        "suggestNum": "$suggestNum"}
            }
        ]
        }
      }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
  }
  